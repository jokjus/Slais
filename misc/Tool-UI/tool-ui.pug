include mixins.pug

doctype html
head
	meta(charset='UTF-8')
	title Tool UI 
	link(rel='stylesheet' href='tool-ui.css')
	

body
	.ui-panel
		.ui-section
			+input('rotation', 'Rotation', 50, 'range')
			+input('brushSize', 'Brush size', 80, 'range')
			+input('strokeOpacity', 'Stroke opacity', 20, 'range')
			+input('density', 'Density', 200, 'range', 0, 1000)
			+input('randomize', 'Randomize', true, 'checkbox')
			+input('randomize', 'Randomize', false, 'checkbox')

		.ui-section
			+header('Noise', true)
			+input('twist', 'Twist', 50, 'range')
			+input('noisePhase', 'Noise phase', 80, 'range')
			+input('noiseAmplitude', 'Noise amplitude', 20, 'range')
			+input('strokeColor', 'Stroke color', '#ff0000', 'color')
			+button('clearAll', 'Clear all')
		
		.ui-section
			+header('Translation')

			.ui-component.two
				+field('ballSize', 'S', 10, 'number', 0, 500)
				+field('ballColor', 'C', '#ff0000', 'color')
				+field('Height', 'H', 10, 'number')
				+field('Width', 'W', 20, 'number')
		.ui-section
			+header('Translation')

			.ui-component.two
				+field('ballSize', 'S', 10, 'number', 0, 500)
				+field('ballColor', 'C', '#ff0000', 'color')
				+field('Height', 'H', 10, 'number')
				+field('Width', 'W', 20, 'number')

			.ui-component
				select
					option One
					option two
					option three
				
	
	script(src='sideslider.min.js' type='text/javascript')
	script(src='tool-ui.js' type='text/javascript')